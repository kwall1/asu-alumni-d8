{% extends 'paragraph.html.twig' %}

{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
        <div class="container">
          <h3 class="paragraph-title">{{ content.field_title.0 }}</h3>
          <p class="paragraph-description">{{ content.field_paragraph_caption.0 }}</p>

          <div class="row">
            {{ content.field_paragraph }}
          </div>

          <div class="links">
            {{ content.field_links }}
          </div>
        </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
