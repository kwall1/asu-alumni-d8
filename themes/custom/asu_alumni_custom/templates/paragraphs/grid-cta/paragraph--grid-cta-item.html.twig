{% extends 'paragraph.html.twig' %}

{% block paragraph %}
  <div class="grid-item col-sm-4">
    {% block content %}
        <div class="outer-wrapper">
          {{ content.field_image }}
          <div class="text-wrapper">
            <div class="wrapper">
              <div class="title">{{ content.field_link }}</div>
              <div class="inner-text-wrapper">
                <p class="paragraph-description">{{ content.field_paragraph_caption.0 }}</p>
              </div>
            </div>
          </div>
        </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
